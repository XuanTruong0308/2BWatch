<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
      th:replace="~{admin/layout/admin-layout :: layout(
        pageTitle='Danh Sách User Bị Ban',
        activeMenu='bans',
        content=~{::content},
        customStyles=~{},
        customScripts=~{::scripts}
      )}">
<body>
    <div th:fragment="content">
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-users-slash fa-2x text-danger"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Users Đang Bị Ban</h6>
                                <h3 class="mb-0" th:text="${bannedUsers.totalElements}">0</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-history fa-2x" style="color: var(--gold);"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Xem Tất Cả Lịch Sử</h6>
                                <a th:href="@{/admin/bans}" class="btn btn-sm" style="background-color: var(--gold); color: white;">
                                    <i class="fas fa-clock me-1"></i>Lịch Sử Ban Logs
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Danh Sách Users Đang Bị Ban</h4>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#banUserModal">
                <i class="fas fa-ban me-2"></i>Ban Account
            </button>
        </div>
        
        <!-- Banned Users Table -->
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Loại Vi Phạm</th>
                            <th>Ngày Ban</th>
                            <th>Ngày Hết Hạn</th>
                            <th>Lý Do</th>
                            <th class="text-center">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr th:each="log : ${bannedUsers}">
                            <td><strong th:text="${log.user.userId}">1</strong></td>
                            <td>
                                <a th:href="@{/admin/users/{id}(id=${log.user.userId})}" class="text-decoration-none">
                                    <strong th:text="${log.user.fullName}">Nguyễn Văn A</strong><br>
                                    <small class="text-muted" th:text="'@' + ${log.user.username}">@username</small>
                                </a>
                            </td>
                            <td th:text="${log.user.email}">email@example.com</td>
                            <td th:text="${log.user.phoneNumber ?: 'N/A'}">0123456789</td>
                            <td>
                                <span class="badge bg-warning text-dark" th:text="${log.violationType.typeName}">Spam</span>
                            </td>
                            <td th:text="${#temporals.format(log.banStartDate, 'dd/MM/yyyy')}">14/01/2026</td>
                            <td>
                                <span th:if="${log.banEndDate != null}" 
                                      th:text="${#temporals.format(log.banEndDate, 'dd/MM/yyyy')}"
                                      th:classappend="${#temporals.createNow().isBefore(log.banEndDate) ? '' : 'text-danger'}">15/01/2026</span>
                                <span th:unless="${log.banEndDate != null}" class="text-danger">
                                    <strong>Vĩnh viễn</strong>
                                </span>
                            </td>
                            <td>
                                <span th:text="${log.reason}" class="text-truncate" style="max-width: 250px; display: inline-block;" 
                                      th:title="${log.reason}">Vi phạm quy định...</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a th:href="@{/admin/bans/user/{userId}(userId=${log.user.userId})}" 
                                       class="btn" style="background-color: var(--gold); color: white;" title="Lịch sử ban">
                                        <i class="fas fa-history"></i>
                                    </a>
                                    
                                    <form th:action="@{/admin/bans/unban/{userId}(userId=${log.user.userId})}" 
                                          method="post" 
                                          style="display: inline;"
                                          onsubmit="return confirm('Xác nhận unban user này?')">
                                        <input type="hidden" name="redirectTo" value="banned-users">
                                        <button type="submit" class="btn btn-success" title="Unban">
                                            <i class="fas fa-check-circle"></i> Unban
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <!-- Empty State -->
            <div th:if="${#lists.isEmpty(bannedUsers.content)}" class="text-center py-5">
                <i class="fas fa-smile fa-4x text-success mb-3" style="display: block;"></i>
                <p class="text-muted">Không có user nào bị ban</p>
            </div>
            
            <!-- Pagination -->
            <nav th:if="${bannedUsers.totalPages > 1}" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item" th:classappend="${bannedUsers.first ? 'disabled' : ''}">
                        <a class="page-link" th:href="@{/admin/bans/banned-users(page=${bannedUsers.number - 1})}">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    
                    <li class="page-item" 
                        th:each="i : ${#numbers.sequence(0, bannedUsers.totalPages - 1)}"
                        th:classappend="${i == bannedUsers.number ? 'active' : ''}">
                        <a class="page-link" th:href="@{/admin/bans/banned-users(page=${i})}" 
                           th:text="${i + 1}">1</a>
                    </li>
                    
                    <li class="page-item" th:classappend="${bannedUsers.last ? 'disabled' : ''}">
                        <a class="page-link" th:href="@{/admin/bans/banned-users(page=${bannedUsers.number + 1})}">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        
        <!-- Ban User Modal -->
        <div class="modal fade" id="banUserModal" tabindex="-1" aria-labelledby="banUserModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: var(--navy); color: white;">
                        <h5 class="modal-title" id="banUserModalLabel">
                            <i class="fas fa-ban me-2"></i>Ban Account
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form th:action="@{/admin/bans/ban/{userId}(userId='USER_ID')}" method="post" id="banUserForm">
                        <input type="hidden" name="redirectTo" value="banned-users">
                        <div class="modal-body">
                            <!-- User Selection -->
                            <div class="mb-3">
                                <label for="userSelect" class="form-label">
                                    <i class="fas fa-user me-1"></i>Chọn User <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="userSelect" name="userId" required>
                                    <option value="">-- Chọn user để ban --</option>
                                    <option th:each="user : ${activeUsers}" 
                                            th:value="${user.userId}"
                                            th:text="${user.fullName + ' (@' + user.username + ') - ' + user.email}"
                                            th:attr="data-roles=${user.userRoles}">
                                    </option>
                                </select>
                                <div class="form-text">Chỉ hiển thị users đang hoạt động (chưa bị ban)</div>
                            </div>
                            
                            <!-- Violation Type -->
                            <div class="mb-3">
                                <label for="violationType" class="form-label">
                                    <i class="fas fa-exclamation-triangle me-1"></i>Loại Vi Phạm <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="violationType" name="violationTypeId" required>
                                    <option value="">-- Chọn loại vi phạm --</option>
                                    <option th:each="type : ${violationTypes}" 
                                            th:value="${type.violationTypeId}"
                                            th:text="${type.typeName}">
                                    </option>
                                </select>
                            </div>
                            
                            <!-- Duration -->
                            <div class="mb-3">
                                <label for="durationType" class="form-label">
                                    <i class="fas fa-clock me-1"></i>Thời Gian Ban <span class="text-danger">*</span>
                                </label>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <select class="form-select" id="durationType" onchange="toggleDuration()">
                                            <option value="permanent">Vĩnh viễn</option>
                                            <option value="temporary">Tạm thời</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6" id="durationInputGroup" style="display: none;">
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="durationValue" min="1" placeholder="Nhập số">
                                            <select class="form-select" id="durationUnit" style="max-width: 100px;">
                                                <option value="60">Giờ</option>
                                                <option value="1440">Ngày</option>
                                                <option value="10080">Tuần</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="durationMinutes" id="durationMinutes" value="0">
                            </div>
                            
                            <!-- Reason -->
                            <div class="mb-3">
                                <label for="banReason" class="form-label">
                                    <i class="fas fa-comment-alt me-1"></i>Lý Do <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" id="banReason" name="reason" rows="3" 
                                          placeholder="Nhập lý do ban account..." required></textarea>
                                <div class="form-text">Chi tiết lý do vi phạm sẽ được lưu lại trong lịch sử</div>
                            </div>
                            
                            <!-- Warning -->
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Lưu ý:</strong> User bị ban sẽ không thể đăng nhập vào hệ thống. 
                                Hãy đảm bảo đã kiểm tra kỹ thông tin trước khi thực hiện.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i>Hủy
                            </button>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-ban me-1"></i>Xác Nhận Ban
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Quick Info -->
        <div class="table-container mt-4">
            <h5 class="mb-3">Lưu ý</h5>
            <ul class="mb-0">
                <li>User bị ban sẽ không thể đăng nhập vào hệ thống</li>
                <li>Nút "Unban" sẽ kích hoạt lại tài khoản ngay lập tức</li>
                <li>Xem lịch sử ban để biết thêm chi tiết về các lần vi phạm trước đó</li>
            </ul>
        </div>
    </div>
    
    <th:block th:fragment="scripts">
        <script>
            // Toggle duration input
            function toggleDuration() {
                const durationType = document.getElementById('durationType').value;
                const durationInputGroup = document.getElementById('durationInputGroup');
                const durationValue = document.getElementById('durationValue');
                
                if (durationType === 'temporary') {
                    durationInputGroup.style.display = 'block';
                    durationValue.required = true;
                } else {
                    durationInputGroup.style.display = 'none';
                    durationValue.required = false;
                    durationValue.value = '';
                }
            }
            
            // Form submission handler
            document.getElementById('banUserForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const userId = document.getElementById('userSelect').value;
                if (!userId) {
                    alert('Vui lòng chọn user!');
                    return;
                }
                
                // Calculate duration in minutes
                const durationType = document.getElementById('durationType').value;
                let durationMinutes = 0;
                
                if (durationType === 'temporary') {
                    const durationValue = parseInt(document.getElementById('durationValue').value) || 0;
                    const durationUnit = parseInt(document.getElementById('durationUnit').value) || 60;
                    durationMinutes = durationValue * durationUnit;
                    
                    if (durationMinutes <= 0) {
                        alert('Vui lòng nhập thời gian ban hợp lệ!');
                        return;
                    }
                }
                
                // Set duration hidden input
                document.getElementById('durationMinutes').value = durationMinutes;
                
                // Update form action with userId
                this.action = '/admin/bans/ban/' + userId;
                
                // Confirm ban
                const confirmMsg = durationType === 'permanent' 
                    ? 'Xác nhận ban user VĨnh VIỄN?' 
                    : 'Xác nhận ban user trong ' + durationValue + ' ' + document.getElementById('durationUnit').options[document.getElementById('durationUnit').selectedIndex].text.toLowerCase() + '?';
                
                if (confirm(confirmMsg)) {
                    this.submit();
                }
            });
            
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        </script>
    </th:block>
</body>
</html>
